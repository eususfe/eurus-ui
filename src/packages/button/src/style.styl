 @import "../../../stylus/index.styl"

.e-button
    position: relative;

    display: inline-flex;
    align-items: stretch;

    width: auto;
    height: auto;

    padding: 4px 16px;

    font-size: 14px;
    font-weight: 500;
    line-height: 1.715em;

    color: $white;
    cursor:pointer;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    vertical-align: middle;

    outline: 0;
    border: 0;
    border-radius:4px;
    background: #0000;

    &:hover
      opacity: 0.6;
    &:active
      opacity: 0.6;
      box-shadow: 0 3px 5px -1px #0003, 0 5px 8px #00000024, 0 1px 14px #0000001f;
    &::before
      border-radius: inherit;
      bottom: 0;
      box-shadow: 0 1px 5px #0003, 0 2px 2px #00000024, 0 3px 1px -2px #0000001f;
      content: "";
      display: block;
      left: 0;
      position: absolute;
      right: 0;
      top: 0;

    &--sx
      font-size: 12px;
    &--sm
      font-size: 14px
    &--md
      font-size: 16px
    &--lg
     font-size: 18px
    &--xl
     font-size: 20px

    &--primary {
      background: $primary;
    }
    &--info {
      background: #00a2fe;
      color: #fff;
    }
    &--warning{
      background: #e2d849;
      color:#fff;
    }
    &--error{
      background: #ee3f4d;
      color:#fff;
    }
    &--purple {
      background: #733df9;
      color: #fff;
    }

    &.disabled
      opacity: .7!important;
      cursor: not-allowed!important;
      outline: 0!important;
    &.plain
      background :#fff;
      color:#222;
    &.round
      border-radius:10px

    &.circle
      border-radius:50%;

    .loading
      width:1.2em;
      margin-right: 4px;
      margin-top: -2px;
      display:inline-flex;