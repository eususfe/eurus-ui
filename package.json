{
  "name": "eurus-ui",
  "version": "0.0.21",
  "description": "",
  "type": "module",
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">= 16"
  },
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "dev": "esno scripts/build.ts",
    "build:compts": "esno scripts/build.ts compts",
    "build": "esno scripts/build.ts all",
    "build:types": "pnpm run build:types-cjs && pnpm run build:types-esm",
    "build:types-cjs": "vue-tsc -p ./src/tsconfig.cjs.json --declaration --emitDeclarationOnly",
    "build:types-esm": "vue-tsc -p ./src/tsconfig.esm.json --declaration --emitDeclarationOnly",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:serve": "pnpm -C docs serve",
    "changelog": "esno scripts/changelog.ts",
    "clean": "rimraf dist",
    "lint:change": "lcf --fix \"{src,build,scripts,examples}/**/*.{ts,tsx,js,vue}\"",
    "lint": "eslint --fix \"{src,scripts}/**/*.{ts,tsx,js,vue}\"",
    "test:watch": "vitest --watch",
    "test": "vitest",
    "typecheck": "vue-tsc -p ./src/tsconfig.esm.json --noEmit",
    "create:compts": "esno ./scripts/create-compt.ts",
    "coverage": "vitest run --coverage",
    "preinstall": "node ./scripts/preinstall.js && husky install",
    "prepublishOnly": "pnpm run clean && pnpm run typecheck && pnpm run test && pnpm run build && pnpm run changelog",
    "release": "bumpp --commit --tag --push && pnpm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiangxd2016/eurus-ui.git"
  },
  "keywords": [
    "ui",
    "vue",
    "eurus-ui",
    "ui framework",
    "component library"
  ],
  "author": "jiangxd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jiangxd2016/eurus-ui/issues"
  },
  "homepage": "https://github.com/jiangxd2016/eurus-ui#readme",
  "lint-staged": {
    "**/*.{js,ts,tsx,vue}": "eslint --cache --fix"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "async-validator": "^4.1.1",
    "dayjs": "^1.11.3",
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^0.3.3",
    "@estjs/tools": "^0.0.21",
    "@types/node": "^18.0.4",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^2.0.0",
    "@vue/test-utils": "^2.0.2",
    "bumpp": "^8.2.1",
    "c8": "^7.11.3",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.19.0",
    "esno": "^0.16.3",
    "happy-dom": "^5.4.0",
    "husky": "^8.0.1",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^10.5.4",
    "pnpm": "7.3.0",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "standard-changelog": "^2.0.27",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vitest": "^0.16.0",
    "vue-tsc": "^0.38.5"
  }
}
