{
  "name": "eurus-ui",
  "version": "0.0.34",
  "description": "",
  "type": "module",
  "packageManager": "pnpm@7.7.1",
  "engines": {
    "node": ">= 16"
  },
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "dev": "pnpm run gen:version &&  pnpm run stylelint:fix && esno scripts/build.ts",
    "build:compts": "pnpm run gen:version &&  pnpm run stylelint:fix && esno scripts/build.ts compts",
    "build": "pnpm run clean && pnpm run gen:version &&  pnpm run stylelint:fix && esno scripts/build.ts all",
    "build:types": "pnpm run build:types-cjs && pnpm run build:types-esm",
    "build:types-cjs": "vue-tsc -p ./src/tsconfig.cjs.json --declaration --emitDeclarationOnly",
    "build:types-esm": "vue-tsc -p ./src/tsconfig.esm.json --declaration --emitDeclarationOnly",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:serve": "pnpm -C docs serve",
    "changelog": "esno scripts/changelog.ts",
    "clean": "rimraf dist",
    "lint:change": "lcf --fix \"{src,build,scripts,example}/**/*.{ts,tsx,js,vue}\"",
    "lint": "eslint --fix \"{src,scripts}/**/*.{ts,tsx,js,vue}\"",
    "stylelint": "stylelint \"src/packages/**/{*.scss,*.css}\"",
    "stylelint:fix": "stylelint --fix \"src/packages/**/{*.scss,*.css}\"",
    "test:watch": "vitest --watch",
    "test": "vitest",
    "gen:version": "esno ./scripts/gen-version.ts",
    "typecheck": "vue-tsc -p ./src/tsconfig.esm.json --noEmit",
    "create:compts": "esno ./scripts/create-compt.ts",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "prerelease": "pnpm run clean && pnpm run gen:version && pnpm run typecheck && pnpm run test && pnpm run build && pnpm run changelog ",
    "release": "pnpm run prerelease && bumpp --commit --tag --push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiangxd2016/eurus-ui.git"
  },
  "keywords": [
    "ui",
    "vue",
    "eurus-ui",
    "ui framework",
    "component library"
  ],
  "author": "jiangxd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jiangxd2016/eurus-ui/issues"
  },
  "homepage": "https://github.com/jiangxd2016/eurus-ui#readme",
  "lint-staged": {
    "**/*.{js,ts,tsx,vue}": "eslint --cache --fix"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "async-validator": "^4.2.5",
    "dayjs": "^1.11.4"
  },
  "peerDependencies": {
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^0.3.3",
    "@estjs/stylelint-config": "^0.0.8",
    "@estjs/tools": "^0.0.21",
    "@types/node": "^18.6.3",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vitejs/plugin-vue-jsx": "^2.0.0",
    "@vue/test-utils": "^2.0.2",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.21.0",
    "esno": "^0.16.3",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^13.0.3",
    "pnpm": "7.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.0",
    "standard-changelog": "^2.0.27",
    "stylelint": "^14.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.20.2",
    "vue-tsc": "^0.39.4"
  }
}
