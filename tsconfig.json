{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"lib": ["esnext", "DOM"],
		"useDefineForClassFields": false,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"@/*": ["*"],
			"eurus-ui": ["index.ts"]
		},
		"resolveJsonModule": true,
		"types": ["vite/client", "vitest/globals"],
		"allowJs": false,
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"declaration": true,
		"outDir": "./dist",
		"removeComments": false,
		"sourceMap": false,
		"esModuleInterop": true,
		"skipLibCheck": true
	}
}
