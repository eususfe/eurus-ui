{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": false,
    "useDefineForClassFields": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "DOM"
    ],
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "packages/ui/*"
      ],
      "eurus-ui": [
        "index.ts"
      ]
    },
    "types": [
      "vite/client",
      "vitest/globals"
    ]
  }
}
