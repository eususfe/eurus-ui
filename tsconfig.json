{
  "compilerOptions": {
    "sourceMap": false,
    "useDefineForClassFields": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": false,
    "emitDeclarationOnly": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "DOM"
    ],
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "typeAcquisition": {
    "include": [
      "vue"
    ]
  },
  "include": [
    "src",
    "typings/**/*.d.ts"
  ],
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  }
}
