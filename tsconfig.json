{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "lib": ["esnext", "DOM"],
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "eurus-ui": ["./src"]
    },
  },
  "typeAcquisition": {
    "include": ["vue"]
  },
  "include": ["typings/**/*.d.ts"],
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  }
}
